{
  "$schema": "https://opencode.ai/config.json",
  "model": "amazon-bedrock/global.anthropic.claude-opus-4-5-20251101-v1:0",
  "autoupdate": true,
  "provider": {
    "amazon-bedrock": {
      "options": {
        "region": "us-east-1",
        "profile": "identity"
      }
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "scrollbar_toggle": "<leader>s",
    "messages_page_up": "ctrl+u",
    "messages_page_down": "ctrl+d",
  },
  "skills": {
    "paths": [
      "~/dev/claude-skills"
    ]
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    },
    "glean": {
      "type": "local",
      "enabled": true,
      "environment": {
        "GLEAN_INSTANCE": "{env:GLEAN_INSTANCE}",
        "GLEAN_API_TOKEN": "{env:GLEAN_API_TOKEN}"
      },
      "command": [
        "npx",
        "-y",
        "@gleanwork/local-mcp-server",
      ]
    }
    // "excalidraw": {
    //   "type": "local",
    //   "command": [
    //     "docker",
    //     "run",
    //     "-i",
    //     "--rm",
    //     "-e",
    //     "EXPRESS_SERVER_URL=http://host.docker.internal:3000",
    //     "-e",
    //     "ENABLE_CANVAS_SYNC=true",
    //     "ghcr.io/yctimlin/mcp_excalidraw:latest"
    //   ],
    //   "enabled": true
    // }
  }
}
